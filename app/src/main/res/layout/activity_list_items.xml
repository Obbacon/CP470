<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:columnCount="2"
    android:rowCount="2"
    android:layout_columnWeight="1"
    android:gravity="fill"
    tools:context=".ListItemsActivity">

    <RadioButton
        android:id="@+id/radio"
        android:text="@string/RadioButtonText">
    </RadioButton>

    <CheckBox
        android:id="@+id/newCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:text="CheckBox"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:onClick="OnCheckChanged">
    </CheckBox>

    <Switch android:text="@string/Question"
        android:id="@+id/switchCheck"
        android:onClick="setOnCheckedChanged"
        tools:ignore="UseSwitchCompatOrMaterialXml">
    </Switch>

    <ImageButton
        android:id="@+id/buttonPicture"
        android:layout_width="165dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:src="@android:drawable/ic_menu_camera"
        tools:ignore="ContentDescription">

    </ImageButton>


</GridLayout>